%Code listing style named "mystyle"
\lstdefinestyle{mystyle}{
    commentstyle=\color{codegreen},
  keywordstyle=\color{magenta},
  numberstyle=\tiny\color{codegray},
  stringstyle=\color{codepurple},
  basicstyle=\ttfamily\footnotesize,
  breakatwhitespace=false,         
  breaklines=true,          
  xleftmargin=0.7cm,
  frame=tlbr,  
  framesep=0.2cm, 
  framerule=0pt,    
  captionpos=b,                    
  keepspaces=true,                 
  showspaces=false,                
  showstringspaces=false,
  showtabs=false,                  
  tabsize=2
}
\lstdefinestyle{ANTLR}{
  style=mystyle,
  language=C,
  numbers=left,
emph={%
        parser,grammar,options,lexer,fragment,skip%                                            literal strings listed here
        },emphstyle={\color{deepblue}\ttfamily},%              and formatted in blue
    alsoletter={->,*,?,:,|,;},%
    morekeywords={->,*,?,:,|,;},%  
%"mystyle" code listing set
}
\newcommand\pythonstyle{\lstset{
style=mystyle,
language=Python,
numbers=left,
otherkeywords={self},             % Add keywords here
emph={MyClass,__init__,add,ignore,build,LexerGenerator,np, plt,
nx,DOTLexer,DOTParser, antlr4,GraphDOTListener,networkx,matplotlib,pyplot,sys},          % Custom highlighting
emphstyle=\ttfamily\color{deepblue},    % Custom highlighting style
}}


% Python environment
\lstnewenvironment{python}[1][]
{
\pythonstyle
\lstset{#1}
}
{}

% Python for external files
\newcommand\pythonexternal[2][]{{
\pythonstyle
\lstinputlisting[#1]{#2}}}

\lstdefinestyle{BASH}{
  style=mystyle,
  basicstyle = \color{white}\ttfamily,
  otherkeywords={$},
emph={%
        main,py,%                                            literal strings listed here
        },emphstyle={\color{codegreen}\ttfamily},%              and formatted in blue
    alsoletter={->,*,?,:,|,;},%
    morekeywords={->,*,?,:,|,;},%  
%"mystyle" code listing set
}

